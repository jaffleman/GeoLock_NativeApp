<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config>
        <!-- Localhost config is NEEDED from react-native for the bundling to work  -->
        <domain-config cleartextTrafficPermitted="true">
            <domain includeSubdomains="true">127.0.0.1</domain>
            <domain includeSubdomains="true">10.0.0.1</domain>
            <domain includeSubdomains="true">localhost</domain>
            <domain includeSubdomains="true">lcdd.jaffleman.tech</domain>
            <domain includeSubdomains="true">192.168.0.16:8082</domain>
            <domain includeSubdomains="true">api.jaffleman.tech</domain>

        </domain-config>

        <domain includeSubdomains="true">api.jaffleman.tech/geolock</domain>
        <trust-anchors>
            <certificates src="@raw/ca"/>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
</network-security-config>